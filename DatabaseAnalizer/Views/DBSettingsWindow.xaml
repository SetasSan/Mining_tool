<Window x:Class="DatabaseAnalizer.DBSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DBSettingsWindow" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="171*"/>
        </Grid.ColumnDefinitions>
        <Label Content="User name:" HorizontalAlignment="Left" Margin="25,131,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="25,170,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UserName" HorizontalAlignment="Left" Height="23" Margin="120,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"  Text="root" Grid.ColumnSpan="2"/>
        <TextBox x:Name="UserPassword"  HorizontalAlignment="Left" Height="23" Margin="120,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <Label Content="DB type:" HorizontalAlignment="Left" Margin="25,52,0,0" VerticalAlignment="Top"/>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="25,217,0,0" VerticalAlignment="Top" Width="215" Click="ConnectClick" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="DBSelector" HorizontalAlignment="Left" Margin="120,56,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="DBSelector_SelectionChanged" Grid.ColumnSpan="2"/>
        <Label Content="Server:" HorizontalAlignment="Left" Margin="25,91,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.526,1.654"/>
        <TextBox x:Name="Server" HorizontalAlignment="Left" Height="23" Margin="120,95,0,0" TextWrapping="Wrap" Text="localhost" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
